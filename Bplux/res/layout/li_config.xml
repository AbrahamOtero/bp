<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >


    <TextView
        android:id="@+id/dli_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:textSize="16sp"
        android:layout_marginLeft="10dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dli_name"
        android:layout_marginRight="30dip"
        android:paddingLeft="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dli_freq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:layout_weight="2"
            android:textColor="#343434"
            android:textSize="12sp" />
       
        <TextView
            android:id="@+id/dli_nbits"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:layout_weight="2"
            android:textColor="#343434"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/dli_mac"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:layout_weight="2"
            android:textColor="#343434"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/dli_active_channels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:layout_weight="1"
            android:lines="1"
            android:textColor="#343434"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dli_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/dli_name"
        android:layout_marginRight="40dip"
        android:gravity="right"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow" />

</RelativeLayout>