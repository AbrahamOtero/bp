<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:paddingBottom="10dip" >

    <TextView
        android:id="@+id/dli_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dli_name"
        android:layout_marginRight="30dip"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingTop="5dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dli_freq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:layout_weight="2"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dli_nbits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:layout_weight="2"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dli_mac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:layout_weight="2"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dli_active_channels"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dli_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/dli_name"
        android:layout_marginRight="40dip"
        android:gravity="right"
        android:textColor="#5F9FDF"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow" />

</RelativeLayout>